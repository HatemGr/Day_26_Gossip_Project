

<div class="card">
  <div class="card-header">
    <%= @gossip.title%>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @gossip.content%></p>
      <footer class="blockquote-footer"> by <%= link_to @gossip.user.first_name, user_path(@gossip.user)  %>
      <cite title="Source Title">, posted on <%= @gossip.created_at.strftime('%Y-%m-%d')%>, 
      updated at <%= @gossip.updated_at.strftime('%Y-%m-%d')%></p>
  </div>
</div>
