
<%# ALERT PART %>
<% flash.any? %>
  <% flash.each do |color,msg|%>
  <div class="alert alert-<%=color%> alert-dismissible fade show" role="alert">
  <strong><%=msg%></strong>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>
<%# ALERT PART %>

<h1 class="mb-4">Modification</h1>
<p>Que veux-tu changer sur ce gossip ?</p>


<%= form_for @gossip do |f|%>
  <div class="form-group my-3">
    <label>Titre du Gossip: </label>
    <%= f.text_field :title, class: 'form-control', value:@gossip.title%>
  </div>

  <div class="form-group my-3">
    <label>Contenu du Gossip: </label>
    <%= f.text_area :content, class: 'form-control', value:@gossip.content%>
  </div>

  <%@tags.each do |tag|%>
    <%= label_tag tag.id, "#{tag.title}" %>
    <%= check_box_tag 'tags_id[]', tag.id%>
  <% end %>

  <button type="submit" class="btn btn-primary">Modifier</button>
<%end%>