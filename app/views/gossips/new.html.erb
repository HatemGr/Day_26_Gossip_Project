<%# FORM_TAG %>
<div class="container px-5 mb-3">
<div class="row py-4 mb-4">
  <h2>Il est temps de faire son gossip !</h2>
</div>
<%= form_tag url_for(action: 'create'), method: "post" do %>
      <div class="mb-3">
        <%= label_tag 'Auteur' %>
      </div>
      <div class="mb-3">
        <%= select_tag "new_gossip_author_id", options_from_collection_for_select(@users, "id", "full_name"), class:"form-select"%>
      </div>
      <br /> 
      <div class="mb-1">
        <%= label_tag 'Titre' %>
      </div>
      <div class="mb-3">
        <%= text_field_tag 'new_gossip_title', @gossip.title, class: "form-control" %>
      </div>
      <br /> 
      <div class="mb-1">
        <%= label_tag 'Contenu' %>
      </div>
      <div class="mb-1">
      <%= text_area_tag 'new_gossip_content', @gossip.content, class: "form-control" %>
      </div>
      <br /> 
      <div class="mb-1">
        <%= label_tag 'Tags' %>
      </div>
      <div class="mb-1">
      <%@tags.each do |tag|%>
        <%= label_tag tag.id, "#{tag.title}" %>
        <%= check_box_tag 'tags_id[]', tag.id%>
      <% end %>
      </div>
      <br /> <br />
      <button type="submit" class="btn btn-primary">Cr√©er ton gossip</button>
<% end %>
</div>